{
    "name": "Caffeine Quest",
    "version": "1.0.0",
    "description": "Displays the nearest coffee shop to you",
    "manifest_version": 3,
    "author": "Rafik Shukralla, Andrew Shiroma",
    "action": {
        "default_popup": "popup.html",
        "default_title": "Coffee Near You"
    },
    "icons": {
        "16": "./coffee.png",
        "32": "./coffee.png",
        "48": "./coffee.png"
    },
    "permissions": ["geolocation"],
    "content_security_policy": {
        "extension_pages": "script-src 'self' https://maps.googleapis.com https://maps.gstatic.com; object-src 'self'"
    }
}